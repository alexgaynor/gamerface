<header>
  <div id="head-cont">
    <div id="gf-logo">GameFace</div>
    <div id="user-sign-inout"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></div>
    <div id="user-sign-inout"><%= link_to "Sign In", new_user_session_path %></div>
  </div>
</header>
<div class="sign-up-background">
  <div id="container">
<!--   <h2>Sign up</h2> -->
    <div id="sign-up-form-cont">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="names_input">
        	<div id="names-private">Your name will by default be kept PRIVATE</div>
        	<div><%= f.label :firstname %>
        	<%= f.text_field :firstname %></div><br />

        	<div><%= f.label :lastname %>
        	<%= f.text_field :lastname %></div><br />
        </div>

        <div><%= f.label :username %>
        <%= f.text_field :username %></div><br />

        <div><%= f.label :email %>
        <%= f.email_field :email, :autofocus => true %></div><br />

        <div><%= f.label :location %>
        	<%= f.text_field :location %></div><br />

        <div><%= f.label :prof_pic, "Please insert a url for your profile picture" %><%= f.text_field :prof_pic %></div><br />

        <div><%= f.label :password %>
        <%= f.password_field :password %></div><br />

        <div><%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %></div><br />

        <div class="offset1"><%= f.submit "Sign up", class: 'offset1' %></div>
      <% end %>
    </div>
  </div>
</div>